<h2>
  <%= params[:search].humanize %>
  <small class="text-muted"><%= Klass.find_by_id(params[:klass_id].to_i).full_title %></small>
</h2>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Country</th>
      <th>Residence</th>
      <th>Gender</th>
      <th>Applied</th>
      <th>Status</th>
      <th>Changed</th>
    </tr>
  </thead>

  <tbody>
    <% @app_forms.each do |app_form| %>
      <tr>
        <td><%= link_to app_form.firstname, app_form %></td>
        <td><%= link_to app_form.lastname, app_form %></td>
        <td><%= app_form.email %></td>
        <td><i class="flag f16 <%= app_form.country.downcase %>"></i> <%= app_form.country %></td>
        <td><i class="flag f16 <%= app_form.residence.downcase %>"></i> <%= app_form.residence %></td>
        <td><%= app_form.gender %></td>
        <td><%= app_form.created_at.to_s(:short) %></td>
        <td><%= app_form.aasm_state.humanize %></td>
        <td><%= app_form.updated_at.to_s(:short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>