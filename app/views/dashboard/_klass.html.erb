<h2><%= klass.subject.title %> <%= klass.title %></h2>

<div class="row">
  <div class="col-md-3">
    <%= statistic_group [:applied, :today], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:invited, :rejected], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:interviewed], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:admitted_and_coming, :scholarships_granted], klass %>
  </div>
</div>
<div class="row" style="padding-top:5pt">
  <div class="col-md-3">
    <%= statistic_group [:new], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:invite_emails_pending], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:waitlist, :interviews_scheduled], klass %>
  </div>
  <div class="col-md-3">
    <%= statistic_group [:deposit_pending, :tuition_pending, :extensions], klass %>
  </div>
</div>